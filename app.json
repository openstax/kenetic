{
  "name": "OpenStax Labs Research Environment ",
  "description": "This app manages access to studies for researchers and participants",
  "keywords": [
    "heroku",
    "Rails",
    "OpenStax"
  ],
  "stack": "container",
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:hobby-dev"
      ],
      "env": {
        "ACCOUNTS_ENV_NAME": {
          "required": true
        },
        "COOKIE_NAME": {
          "required": true
        },
        "COOKIE_PRIVATE_KEY": {
          "required": true
        },
        "COOKIE_PUBLIC_KEY": {
          "required": true
        },
        "HEROKU_API_TOKEN": {
          "required": true
        },
        "HOST": {
          "required": true
        },
        "SECRET_KEY_BASE": {
          "required": true
        },
        "SENTRY_RAILS_DSN": {
          "required": true
        }
      },
      "scripts": {
        "postdeploy": "bundle exec rake heroku:review_app_setup",
        "pr-predestroy": "bundle exec rake heroku:review_app_predestroy"
      }
    }
  }
}
