# frozen_string_literal: true

source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '3.0.5'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails', branch: 'main'
gem 'rails', '~> 6.1.5'
# Use postgresql as the database for Active Record
gem 'pg', '>= 0.18', '< 2.0'
# Use Puma as the app server
gem 'puma', '~> 5.0'

# Reduces boot times through caching; required in config/boot.rb
gem 'bootsnap', '>= 1.4.4', require: false

# Use Rack CORS for handling Cross-Origin Resource Sharing (CORS), making cross-origin AJAX possible
# gem 'rack-cors'

# Use Heroku for review apps
gem 'platform-api'

# Versioned API tools
gem 'versionist'

# More concise, one-liner logs (better for production)
gem 'lograge'

# Gives 200 OK from /ping
gem 'openstax_healthcheck'

# For installing secrets on deploy
gem 'aws-sdk-ssm'

# For deploying domain names
gem 'aws-sdk-route53'

gem 'dotenv-rails'

gem 'qualtrics_api',
    github: 'openstax/qualtrics_api',
    ref: '88b2340d71677ce6ef6e41d681afbc948585b5f0'

gem 'will_paginate', '~> 3.1.7'

gem 'activesupport_cache_database'

gem 'aws-sdk-s3', '~> 1.116'
gem 'httpx', '~> 0.21'
# API versioning and documentation
gem 'openstax_api', '9.4.1'

gem 'openstax_openapi',
    github: 'openstax/openapi-rails',
    ref: '3aee76409845d6e31ba2fd90a4f1152bc803ccf5'

gem 'openstax_auth',
    github: 'openstax/auth-rails',
    ref: 'ed2d7da86ca226b93376955b9474c4cf115c611f'

# OpenStax Accounts integration
gem 'openstax_accounts', '9.8.0'

gem 'mailgun-ruby', '~>1.2.5'

# Exception reporting
gem 'sentry-rails'
gem 'sentry-ruby'

# CORS
gem 'rack-cors'

gem 'rubyzip'
gem 'sssecrets' # for generating api keys

group :test do
  # Code Climate integration
  gem 'codecov', require: false
  gem 'simplecov', require: false
end

group :development, :test do
  gem 'factory_bot_rails'
  gem 'faker'
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
  gem 'rspec-rails', '~> 5.0.0'
  gem 'rubocop'
  gem 'rubocop-rails'
  gem 'rubocop-rspec'
  gem 'timecop'
end

group :development do
  gem 'listen', '~> 3.3'
  # provides LSP support
  gem 'solargraph'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
